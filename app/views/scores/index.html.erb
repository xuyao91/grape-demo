<p id="notice"><%= notice %></p>

<h1>Listing Score</h1>

<table>
  <thead>
    <tr>
      <th>student id</th>
      <th>course id</th>
      <th>grade</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.student_id %></td>
        <td><%= score.course_id %></td>
        <td><%= score.grade %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

